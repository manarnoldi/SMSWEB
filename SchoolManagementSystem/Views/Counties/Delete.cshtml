@using Vereyon.Web
@model SchoolManagementSystem.Models.ViewModels.CountyViewModel
@Html.RenderFlashMessages()
<section class="content-header">
    <h1>
        Counties
        <small>Create</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="@Url.Action("Index","Counties")">Counties</a></li>
        <li><a href="@Url.Action("Delete","Counties")">Delete</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        County Details To Delete
                    </h3>
                </div>

                <div class="box-body">
                    <div class="col-md-12">
                            <dl class="dl-horizontal">
                                <dt>
                                    County Name:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.County.CountyName)
                                </dd>

                            </dl>
                    </div>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="box-footer">
                        @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-info btn-flat pull-left" })
                        <input type="submit" value="Delete Record" class="btn btn-info btn-flat pull-right" />
                    </div>
                }
            </div>
        </div>
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        View Counties Details
                    </h3>
                </div>

                <div class="box-body">
                    <table id="countiesTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>County Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Counties)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CountyName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>County Name</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('#countiesTable').DataTable();
        });
    </script>
}