@model SchoolManagementSystem.Models.ViewModels.PostalCodesViewModel

@{
    ViewBag.Title = "Delete";
}

<section class="content-header">
    <h1>
        Posting Codes
        <small>Delete</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">PostalCodes</a></li>
        <li class="active">Delete</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Delete Postal Code</h3>
                </div>
                <div class="box-body">
                    <h3>Delete this postal code?</h3>
                    <dl class="dl-horizontal">
                        <dt>
                            Postal Code:
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PostalCode.Code)
                        </dd>
                        <dt>
                            Postal Name:
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PostalCode.PostalName)
                        </dd>
                    </dl>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="box-footer">
                        @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-info btn-flat pull-left" })
                        <input type="submit" value="Delete Record" class="btn btn-info btn-flat pull-right" />
                    </div>
                }
            </div>
        </div>
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">View Postal Codes Details</h3>
                </div>
                <div class="box-body">
                    <div class="col-md-12">
                        <table id="postalCodesTable" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Postal Code</th>
                                    <th>Postal Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PostalCodes)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Code)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PostalName)</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Postal Code</th>
                                    <th>Postal Name</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
    <script type="text/javascript">
        $(document).ready(function () {
            $('#postalCodesTable').DataTable();
        });
    </script>
}