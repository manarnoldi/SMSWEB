@model SchoolManagementSystem.Models.ViewModels.PostalCodesViewModel

@{
    ViewBag.Title = "Create";
}

<section class="content-header">
    <h1>
        Postal Codes
        <small>Create</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">PostalCodes</a></li>
        <li class="active">Create</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Enter Postal Code Details</h3>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PostalCode.Code, "Postal Code:", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.PostalCode.Code, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PostalCode.Code, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PostalCode.PostalName, "Postal Name:", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.PostalCode.PostalName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PostalCode.PostalName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <input type="submit" value="Submit Details" class="btn btn-info btn-flat pull-right" />
                    </div>
                }
            </div>
        </div>
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">View Postal Codes Details</h3>
                </div>
                <div class="box-body">
                    <div class="col-md-12">
                        <table id="postalCodesTable" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Postal Code</th>
                                    <th>Postal Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PostalCodes)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Code)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PostalName)</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | 
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Postal Code</th>
                                    <th>Postal Name</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('#postalCodesTable').DataTable();
        });
    </script>
}
