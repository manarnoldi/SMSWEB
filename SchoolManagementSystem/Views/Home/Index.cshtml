@{
    ViewBag.Title = "Home Page";
}

 <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        SchoolSoft Web
        <small>Version 1.0</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Info boxes -->
    <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-aqua"><img src='@Url.Content("~/Images/Icons/graduate-student-avatar.png")' /></span>
                <div class="info-box-content">
                    <span class="info-box-text">TOTAL STUDENTS</span>
                    <span class="info-box-number">467</span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-red"><img src='@Url.Content("~/Images/Icons/teacher.png")' /></span>
                <div class="info-box-content">
                    <span class="info-box-text">TOTAL BOM TEACHERS</span>
                    <span class="info-box-number">13</span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <!-- fix for small devices only -->
        <div class="clearfix visible-sm-block"></div>
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-green"><img src='@Url.Content("~/Images/Icons/teacher.png")' /></span>
                <div class="info-box-content">
                    <span class="info-box-text">TOTAL TSC TEACHERS</span>
                    <span class="info-box-number">9</span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-yellow"><img src='@Url.Content("~/Images/Icons/manager.png")' /></span>
                <div class="info-box-content">
                    <span class="info-box-text">TOTAL SUPPORT STAFF</span>
                    <span class="info-box-number">10</span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->