@model SchoolManagementSystem.Models.ViewModels.PostingPeriodsViewModel

@{
    ViewBag.Title = "Create";
}

<div class="box-header with-border">
    <h3 class="box-title">Enter Posting Periods</h3>
</div>

@using (Html.BeginForm("Create", "PostingPeriods", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="box-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Year, "Year:", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("Year", null,string.Empty, htmlAttributes:
                   new
                   {
                       @class = "form-control select2",
                       onchange = "getItemsYear('yearDropDown','periodNameDropDown','/PostingPeriods/getPeriodName')",
                       Id = "yearDropDown",
                       data_placeholder = "Select Year",
                       style = "width: 100%"
                   })
                    @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.Label("PeriodName", "Period Name:", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("PeriodName", Enumerable.Empty<SelectListItem>() , string.Empty, htmlAttributes:
                   new
                   {
                       @class = "form-control select2",
                       Id = "periodNameDropDown",
                       data_placeholder = "Select Term",
                       style = "width: 100%"
                   })
                    @Html.ValidationMessageFor(model => model.PeriodName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PostingPeriod.PostingId,"Parameter Name:", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.PostingPeriod.PostingId, (SelectList)ViewBag.PostingId, string.Empty, htmlAttributes: new { @class = "form-control select2",
                   data_placeholder = "Select Parameter Name",
                   style = "width: 100%"
               })
                    @Html.ValidationMessageFor(model => model.PostingPeriod.PostingId, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.PostingPeriod.StartDate,"Start Date:", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.PostingPeriod.StartDate, new { htmlAttributes = new { @class = "form-control date-picker", placeholder = "Start Date" } })
                    @Html.ValidationMessageFor(model => model.PostingPeriod.StartDate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PostingPeriod.EndDate,"End Date:", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.PostingPeriod.EndDate, new { htmlAttributes = new { @class = "form-control date-picker", placeholder = "End Date" } })
                    @Html.ValidationMessageFor(model => model.PostingPeriod.EndDate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PostingPeriod.Status,"Status:", htmlAttributes: new { @class = "control-label" })
                    @Html.EnumDropDownListFor(model => model.PostingPeriod.Status, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PostingPeriod.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <input type="submit" value="Submit Details" class="btn btn-info btn-flat pull-right" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
